{
  "compilerOptions": {
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./out-tsc",
    "rootDir": "./",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "app/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "custom-types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
